                            android:orientation="vertical"></LinearLayout>
                    </RelativeLayout>
                </TableRow>

                <!-- red line -->
                <View
                    android:layout_height="2dip"
                    android:background="#FF0000" />

                <!-- ****************************************************** Port 2 ******************************************************-->
                <TableRow
                    android:id="@+id/row_port2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:id="@+id/port2"
                        android:paddingEnd="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingStart="5dp"
                        android:text="@string/row_port2"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"></LinearLayout>
                    </RelativeLayout>
                </TableRow>

                <!-- red line -->
                <View
                    android:layout_height="2dip"
                    android:background="#FF0000" />


                <!-- ****************************************************** Port 3 ******************************************************-->
                <TableRow
                    android:id="@+id/row_port3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:id="@+id/port3"
                        android:paddingEnd="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingStart="5dp"
                        android:text="@string/row_port3"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"></LinearLayout>
                    </RelativeLayout>
                </TableRow>

                <!-- red line -->
                <View
                    android:layout_height="2dip"
                    android:background="#FF0000" />

                <!-- ****************************************************** Port 4 ******************************************************-->
                <TableRow
                    android:id="@+id/row_port4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:id="@+id/port4"
                        android:paddingEnd="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingStart="5dp"
                        android:text="@string/row_port4"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"></LinearLayout>
                    </RelativeLayout>
                </TableRow>

                <!-- red line -->
                <View
                    android:layout_height="2dip"
                    android:background="#FF0000" />

                <!-- ****************************************************** Port 5 ******************************************************-->
                <TableRow
                    android:id="@+id/row_port5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:id="@+id/port5"
                        android:paddingEnd="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:paddingStart="5dp"
                        android:text="@string/row_port5"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"></LinearLayout>
                    </RelativeLayout>
                </TableRow>

                <!-- red line -->
                <View
                    android:layout_height="2dip"
                    android:background="#FF0000" />

            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>